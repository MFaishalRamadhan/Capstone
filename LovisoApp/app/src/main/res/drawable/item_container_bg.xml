<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/text_color"/>
            <corners android:radius="8dp"/>
            <padding
                android:right="2dp"
                android:bottom="2dp"/>
            <stroke android:width="2dp" android:color="@color/text_color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp"/>
            <padding
                android:right="2dp"
                android:bottom="2dp"/>
            <stroke android:width="1dp" android:color="@color/text_color"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="@color/bg_item"
                />
            <corners
                android:radius="8dp"
                />
            <padding
                android:left="12dp"
                android:right="12dp"
                android:bottom="12dp"/>
            <stroke
                android:color="@color/text_color"
                android:width="2dp"/>
        </shape>
    </item>

</layer-list>